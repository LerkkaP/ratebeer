<h3>Best Beers</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Beer</th>
      <th>Average</th>
    </tr>
  </thead>
  <tbody>
    <% beers.each do |beer| %>
      <tr>
        <td><%= beer.name %></td>
        <td><%= beer.average_rating %></td>
      </tr>
    <% end %>
  </tbody>
</table>