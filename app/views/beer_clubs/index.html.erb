<h1>Beer clubs</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= link_to "Name", beer_clubs_path(order: "name") %></th>
      <th><%= link_to "Founded", beer_clubs_path(order: "founded") %></th>
      <th><%= link_to "City", beer_clubs_path(order: "city") %></th>
    </tr>
  </thead>
  <tbody>
    <% @beer_clubs.each do |beer_club| %>
      <tr>
        <td>
          <div id="<%= dom_id beer_club %>">
            <p>
              <%= beer_club.name %>
            </p>
          </div>
        </td>
        <td><%= beer_club.founded %></td>
        <td><%= beer_club.city %></td>
        <td>
          <%= link_to "Show this beer club", beer_club, class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to("New beer club", new_beer_club_path,  class:"btn btn-primary") if current_user%> 
