
<%= render @beer_club %>

<p>
  <strong>Members</strong>  
</p>


<div>
  <% @beer_club.users.each do |member| %>
    <p><%= link_to member.username, user_path(member.id) %></p>
  <% end %>
</div>

<% if current_user && current_user.already_member_of?(@beer_club) %>
  <%= form_with(model: current_user.memberships.find_by(beer_club_id: @beer_club.id), method: :delete) do |form| %>
    <%= form.submit "End the membership" %>
  <% end %>
<% end %>

<div>
    <%= link_to("Edit this beer club |", edit_beer_club_path(@beer_club)) if current_user%>
  <%= link_to "Back to beer clubs", beer_clubs_path %>

  <%= button_to("Destroy this beer club", @beer_club, method: :delete) if current_user %>
</div>

<% if current_user && !current_user.already_member_of?(@beer_club) %>
  <%= form_with(model: @membership) do |form| %>
    <%= form.hidden_field :beer_club_id, value: @beer_club.id %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.submit "Join the beer club" %>
  <% end %>
<% end %>

